<!-- Sección de Busqueda del Cliente -->
<div class="container-fluid">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><strong>Buscar cliente: </strong></h3>
    </div>
    <form class="form-inline" {{action "searchProd" on="submit"}}>
      <table class="table table-hover">
        <tr>
          <td>
            <div class="container-fluid">
              <label>Tipo de Documento</label>
              <br>
              {{radio-button value='cc' checked=tipoDocumento required="true"}}<label> - Cédula de Ciudadanía</label><br>
              {{radio-button value='ce' checked=tipoDocumento required="true"}}<label> - Cédula de Extranjería</label><br>
              {{radio-button value='nit' checked=tipoDocumento required="true"}}<label> - NIT</label><br>
            </div>
          </td>
          <td>
            <div class="container-fluid">
              <label>Numero de Documento</label>
              <br>
              {{input type="integer" class="form-control" value=idClient required="true"}}
            </div>
          </td>
          <td>
            <div class="container-fluid">
              <button type="submit" class="btn btn-info btn-block">Buscar</button>
            </div>
          </td>
        </tr>
      </table>
    </form>
    {{#if isFailed}}
    <div class="alert alert-danger" role="alert">
      <span class="error"></span>
      <span class="sr-only">Error:</span>
      El  documento {{idClient}} no es valido.
    </div>
    {{/if}}

  </div>
</div>

{{#if isCommit}}
{{outlet "tabla"}}
{{/if}}
